<h1>Edit Stack</h1>
<a href="/index"><button>Back</button></a>
<!-- Form for adding a new card -->
<form action="/add" method="POST">
    <label for="sideone">Side One:</label><br>
    <input type="text" id="sideone" name="sideone"><br>
    <label for="sidetwo">Side Two:</label><br>
    <input type="text" id="sidetwo" name="sidetwo"><br>
    <input type="submit" value="Add Card">
</form>

<!-- List of existing cards -->
<% cards.forEach(function(card) { %>
    <div>
        <h2><%= card.sideone %></h2>
        <h2><%= card.sidetwo %></h2>
        <a href="/edit/<%= card.id %>"><button>Edit</button></a>
        <button onclick="deleteCard('<%= card.id %>', event)">Delete</button>
    </div>
<% }); %>

<script>
    function deleteCard(id, event) {
        event.preventDefault();
        fetch('/delete/' + id, { // Replace ':id' with the actual id
            method: 'DELETE',
        })
        .then(response => response.text())
        .then(() => window.location.href = '/edit');
    }
    </script>
    

